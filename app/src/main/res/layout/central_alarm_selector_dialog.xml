<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/central_alarm_switch"
        android:textOff="OFF"
        android:textOn="ON"
        android:layout_marginLeft="20dp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/central_alarm_switch"
        android:orientation="horizontal"
        android:id="@+id/central_alarmTone_radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beep"
            android:id="@+id/central_radio_beep"
            android:checked="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vibrate"
            android:id="@+id/central_radio_vibrate"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ring"
            android:id="@+id/central_radio_ring"/>
    </RadioGroup>

</LinearLayout>
