<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_insertAbove"
        android:text="Insert Above"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancelAlarm"
        android:layout_toRightOf="@+id/btn_insertAbove"
        android:text="Cancel Alarm"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete"
        android:layout_toRightOf="@+id/btn_cancelAlarm"
        android:text="Delete"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_setAlarm"
        android:layout_marginLeft="130dp"
        android:layout_below="@id/btn_cancelAlarm"
        android:text="Set Alarm"
        />

</RelativeLayout>